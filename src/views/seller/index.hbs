{{> header_principal}}

<section class="c-profile">
    <article class="c-profile__content">
        {{> seller/options_seller }}
        <div class="div-profile">
            <figure class="div-profile__slider">
                <img src="../images/banner-store/1.jpg">
            </figure>
            <img class="div-profile--img" src="{{imageStore store.imagen}}">
            <div class="div-profile__info">
                <form class="div-profile__info-content" action="/seller/store/update" method="POST">
                    <h1 class="div-profile__info--h1">{{store.nombre}}</h1>
                    <div class="div-profile__label md:flex">
                        <label for="usuario" class="justify-between flex mb-3 items-center justify-between">
                            <span>Usuario</span>
                            <input class="" type="text" id="usuario" value="{{user.nombres}}" readonly required>
                        </label>
                        <label for="nombre" class="justify-between flex mb-3 items-center justify-between">
                            <span>Nombre</span>
                            <input class="" type="text" id="nombre" value="{{store.nombre}}" name="nombre" type="text" required>
                        </label>
                        <label for="descripcion" class="justify-between flex mb-3 items-center justify-between">
                            <span>Descripción</span>
                            <input class="" id="descripcion" type="text" value="{{store.descripcion}}" name="descripcion" required>
                        </label>
                        <label for="telefono" class="justify-between flex mb-3 items-center justify-between">
                            <span>Télefono</span>
                            <input class="" id="telefono" type="text" value="{{store.telefono}}" name="telefono" required>
                        </label>
                        <label for="email" class="justify-between flex mb-3 items-center justify-between">
                            <span>Correo</span>
                            <input class="" id="email" type="email" value="{{store.email}}" name="email" type="email" required>
                        </label>
                        <label for="telefono" class="justify-between flex mb-3 items-center justify-between">
                            <span>Télefono alternativo</span>
                            <input class="" id="telefono" type="text" name="pagina_web" value="{{store.pagina_web}}">
                        </label>
                        <label for="direccion" class="justify-between flex mb-3 items-center justify-between">
                            <span>Dirección</span>
                            <input class="" id="direccion" type="text">
                        </label>
                        <label for="direccion" class="justify-between flex mb-3 items-center justify-between">
                            <span>Dirección alternativo</span>
                            <input class="" id="direccion" type="text">
                        </label>
                        <label for="" class="items:start justify-between flex mb-3 justify-between">
