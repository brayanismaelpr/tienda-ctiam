{{> header_principal }}
<div id="modal"></div>
<section class="c-profile">
    <article class="container mx-auto md:flex sm:justify-between">
        {{> user/options_user }}
        <div class="py-14 mx-auto md:mx-0 w-11/12 md:w-9/12">
            {{!-- <form action="" method=""> --}}
                <h2 class="pb-8 text-xl">Detalles de producto</h2>
                <div class="w-full">
                    <div class="pb-10 flex">
                        <p class="pr-4">Pedido: <b>#{{order.dataValues.id}}</b></p>
                        <p class="pr-4">Fecha: <b>{{order.fecha}}</b></p>
                        <p>Total: <b>$ {{order.dataValues.total}}</b></p>
                    </div>
                    {{#each sales}}
                    <div class="border-2 rounded-sm p-8 bg-gray-100 mb-8">
                        <p class="text-xl pb-6 font-bold">Compra #{{@index}}</p>
                        <div class="sm:flex w-full bg-white shadow-2xl flex-wrap p-6 mb-8 border-b-2">
                            <div class="w-full sm:w-6/12">
                                <p>Tienda: <b>{{this.tienda.dataValues.nombre}}</b></p>
                                <p>Total: <b>{{this.dataValues.total}}</b></p>
                                <p class="pr-4">Estado: <b>Pedido entregado</b></p>
                            </div>
                            <div class="w-full sm:w-6/12">
                                <p>Teléfono de contacto: <b>{{this.tienda.dataValues.telefono}}</b></p>
                                <p>Correo electrónico: <b>{{this.tienda.dataValues.email}}</b></p>
                            </div>
                        </div>
                        {{#each this.items}}
                        <div class="w-full rounded shadow-2xl p-6 bg-white mb-2">
                            <figure class="md:flex">
                                <img class="rounded overflow-hidden w-full md:w-1/4 h-40 object-cover object-fit"
                                    src="{{this.imagen}}">
                                <figcaption class="w-full md:w-9/12 pl-0 md:pl-4 pt-4 md:pt-0">
                                    <p class="pb-2 font-bold text-xl">{{this.titulo}}</p>
                                    <p>Precio x unidad: <b>$ {{this.precio}}</b></p>
                                    <p>Cantidad: <b>{{this.cantidad}}</b></p>
                                    <p class="font-bold">Total: {{this.total_item}}</p>
                                </figcaption>
                            </figure>
                            <div class="flex pt-6">
                                <form action="/user/return" method="post">
                                    <input type="hidden" name="id_item" value="{{this.id_item}}">
                                    <button class="py-2 px-4 text-white bg-pink-500 hover:bg-pink-800 duration-300 rounded-md mr-4" type="submit">
                                        Solicitar devolución</button>
                                </form>
                                <form action="/user/change" method="post">
                                    <input type="hidden" name="id_item" value="{{this.id_item}}">
                                    <button class="py-2 px-4 border-2 bg-white hover:bg-gray-200 duration-300 border-pink-600 rounded-md" type="submit">
                                        Solicitar cambio</button>
                                </form>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    {{/each}}
                </div>
                {{!--
            </form> --}}
        </div>
    </article>
</section>
{{> footer }}