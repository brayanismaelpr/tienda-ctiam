{{> header_principal }}
<div id="modal"></div>
<section class="c-profile">
    <article class="container mx-auto md:flex sm:justify-between">
        {{> user/options_user }}
        <div class="div-profile py-10">
            <div class="c-list__t w-11/12 mx-auto">
                <div class="c-list__t-body grid grid-cols-4 gap-2" style="border-bottom: 1px solid rgb(194, 194, 194);">
                    <div class="c-list__column">
                        <p class="c-list__column--p"><b>#Id item</b></p>
                    </div>
                    <div class="c-list__column">
                        <p class="c-list__column--p"><b>Tienda</b></p>
                    </div>
                    <div class="c-list__column">
                        <p class="c-list__column--p"><b>Producto</b></p>
                    </div>
                    <div class="c-list__column">
                        <p class="c-list__column--p"><b>Acciones</b></p>
                    </div>
                </div>
                {{#each changes}}
                <div class="c-list__t-body grid grid-cols-4 gap-2" style="border-bottom: 1px solid rgb(194, 194, 194);">
                    <div class="c-list__column">
                        <p class="c-list__column--p">{{this.id_item}}</p>
                    </div>
                    <div class="c-list__column">
                        <p class="c-list__column--p">{{this.tienda}}</p>
                    </div>
                    <div class="c-list__column">
                        <p class="c-list__column--p">{{this.producto}}</p>
                    </div>
                    <form class="c-list__column" action="/user/change" method="POST">
                        <input type="hidden" name="id_item" value="{{this.id_item}}">
                        <button>
                            <i class="fas fa-eye"></i>
                        </button>
                    </form>
                </div>
                {{/each}}
            </div>
    </article>
</section>
{{> footer }}